{
    "$schema": "https://opencode.ai/config.json",
    "share": "disabled",
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama (local)",
            "options": {
                "baseURL": "http://localhost:11434/v1"
            },
            "models": {
                "qwen3-coder:480b-cloud": {
                    "name": "qwen3-coder"
                },
                "kimi-k2:1t-cloud": {
                    "name": "kimi-k2:1t-cloud"
                },
                "glm-4.6:cloud": {
                    "name": "glm-4.6-cloud"
                },
                "gpt-oss:120b-cloud": {
                    "name": "gpt-oss:120b"
                },
                "minimax-m2:cloud": {
                    "name": "minimax-m2-cloud"
                }
            }
        },
        "aichristiant": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "aichristiant",
            "options": {
                "baseURL": "https://ai.christiant.io/api",
                "headers": {
                    "Authorization": "Bearer {env:OPENAI_API_KEY}"
                }
            },
            "models": {
                "gpt-oss-20b": {
                    "name": "gpt-oss-20b"
                },
                "qwen3:30b-64k": {
                    "name": "qwen3:30b-64k"
                },
                "qwen3-coder:30b": {
                    "name": "qwen3-coder:30b"
                },
                "qwen3:0.6b": {
                    "name": "qwen3:0.6b"
                }
            }
        }
    },
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "headers": {
                "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
            },
            "enabled": true
        },
        "armis-security-remote-mcp": {
            "type": "remote",
            "url": "https://gce.armis.com/mcp",
            "headers": {
                "Authorization": "Bearer {env:ARMIS_BEARER_TOKEN}"
            },
            "enabled": false
        },
        "chrome-devtools-mcp": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "chrome-devtools-mcp@latest",
                "--executablePath=/var/lib/flatpak/exports/bin/com.google.Chrome"
            ],
            "enabled": true
        },
        "ollama_web_search": {
            "type": "local",
            "command": [
                "uv",
                "run",
                "/home/christian/.local/share/opencode/mcp-servers/ollama-web-search.py"
            ],
            "enabled": true,
            "environment": {
                "OLLAMA_API_KEY": "{env:OLLAMA_API_KEY}"
            }
        },
        "github": {
            "type": "remote",
            "url": "https://api.githubcopilot.com/mcp/",
            "headers": {
                "Authorization": "Bearer {env:GITHUB_PAT_MCP}"
            },
            "enabled": true
        }
    },
    "tools": {
        "github_*": false
    },
    "permission": {
        "github_*": "deny"
    },
    "agent": {
        "plan": {
            "description": "Planning and analysis agent that cannot make changes to code",
            "mode": "all",
            "model": "qwen3-coder",
            "tools": {
                "read": true,
                "glob": true,
                "grep": true,
                "list": true,
                "webfetch": true,
                "write": false,
                "edit": false,
                "bash": false,
                "chrome-devtools-mcp_*": false
            },
            "permission": {
                "write": "deny",
                "edit": "deny",
                "bash": "deny",
                "github_*": "deny",
                "chrome-devtools-mcp_*": "deny"
            }
        },
        "execute": {
            "description": "Execute agent with all tools enabled except Chrome DevTools and GitHub operations",
            "mode": "all",
            "tools": {
                "chrome-devtools-mcp_*": false,
                "github_*": false
            },
            "permission": {
                "github_*": "deny",
                "chrome-devtools-mcp_*": "deny"
            }
        },
        "github": {
            "description": "GitHub agent for all GitHub operations including repository management, issues, pull requests, and code reviews",
            "mode": "all",
            "model": "gpt-oss-20b",
            "tools": {
                "github_*": true,
                "read": true,
                "write": true,
                "edit": true,
                "bash": true
            },
            "permission": {
                "github_*": "allow"
            }
        },
        "build-and-browse": {
            "description": "Build and Browse agent with all tools plus Chrome DevTools access",
            "mode": "all",
            "tools": {
                "chrome-devtools-mcp_*": true
            },
            "permission": {
                "chrome-devtools-mcp_*": "allow"
            }
        }
    }
}
