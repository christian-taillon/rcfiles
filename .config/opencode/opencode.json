{
    "$schema": "https://opencode.ai/config.json",
    "share": "disabled",
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama (local)",
            "options": {
                "baseURL": "http://localhost:11434/v1"
            },
            "models": {
                "qwen3-coder:480b-cloud": {
                    "name": "qwen3-coder"
                },
                "kimi-k2:1t-cloud": {
                    "name": "kimi-k2:1t-cloud"
                },
                "glm-4.6:cloud": {
                    "name": "glm-4.6-cloud"
                },
                "gpt-oss:120b-cloud": {
                    "name": "gpt-oss:120b"
                }
            }
        },
        "aichristiant": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "aichristiant",
            "options": {
                "baseURL": "https://ai.christiant.io/api"
            },
            "models": {
                "gpt-oss:20b": {
                    "name": "gpt-oss:20b"
                },
                "qwen3:30b-64k": {
                    "name": "qwen3:30b-64k"
                },
                "qwen3-coder:30b": {
                    "name": "qwen3-coder:30b"
                },
                "minimax-m2:cloud": {
                    "name": "minimax-m2:cloud"
                }
            }
        }
    },
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "headers": {
                "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
            },
            "enabled": true
        },
        "armis-security-remote-mcp": {
            "type": "remote",
            "url": "https://gce.armis.com/mcp",
            "headers": {
                "Authorization": "Bearer {env:ARMIS_BEARER_TOKEN}"
            },
            "enabled": true
        }
    }
}
